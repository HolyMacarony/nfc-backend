    <!-- CUSTOM PRIMEFACES UI COMPONENTS-->
    <component>
        <component-type>org.primefaces.component.panel.Panel</component-type>
        <component-class>pictures.taking.washing.customComponents.CustomPanel</component-class>
    </component>
    <component>
        <component-type>org.primefaces.component.Tree</component-type>
        <component-class>pictures.taking.washing.customComponents.MyTree</component-class>
    </component>
    <component>
        <component-type>org.primefaces.component.UITreeNode</component-type>
        <component-class>pictures.taking.washing.customComponents.MyTreeNode</component-class>
    </component>
    <render-kit>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.TreeRenderer</renderer-type>
            <renderer-class>pictures.taking.washing.customComponents.MyTreeRenderer</renderer-class>
        </renderer>
    </render-kit>
